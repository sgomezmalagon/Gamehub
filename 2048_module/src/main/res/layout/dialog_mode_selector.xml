<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="28dp"
    android:background="@drawable/bg_dialog_mode">

    <!-- Title Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2048"
        android:textColor="@color/text_brown"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:letterSpacing="0.05" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elige tu modo de juego"
        android:textColor="@color/text_subtitle"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp" />

    <!-- ═══ CARD: Modo Normal ═══ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/card_normal_bg"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:gravity="center_vertical">

            <!-- Icon circle -->
            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_2048_icon_circle">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modo Normal"
                    android:textColor="@color/text_brown"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sin límite de tiempo. Juega a tu ritmo."
                    android:textColor="@color/text_subtitle"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▶"
                android:textSize="18sp"
                android:textColor="@color/bg_grid" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ═══ CARD: Modo Blitz ═══ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_blitz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/card_blitz_bg"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:gravity="center_vertical">

            <!-- Icon circle -->
            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_2048_icon_circle">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_flash" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modo Blitz"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 minutos. ¿Cuánto puedes conseguir?"
                    android:textColor="#FFF5E0"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡"
                android:textSize="18sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Separator -->
    <View
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="16dp"
        android:background="@color/tile_0" />

    <!-- Cancel Button -->
    <LinearLayout
        android:id="@+id/btn_cancel_mode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_btn_cancel"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕"
            android:textSize="16sp"
            android:textColor="@color/text_brown"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="@color/text_brown"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>

