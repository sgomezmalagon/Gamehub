<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_skill_button"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_skill_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_skill_icon_circle"
        android:contentDescription="@string/skill_icon"
        android:padding="0dp" />

    <ImageView
        android:id="@+id/cooldown_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cooldown_radial_overlay"
        android:visibility="gone"
        android:alpha="0.7" />

    <TextView
        android:id="@+id/tv_cooldown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:visibility="gone"
        android:background="@android:color/transparent" />

</FrameLayout>
