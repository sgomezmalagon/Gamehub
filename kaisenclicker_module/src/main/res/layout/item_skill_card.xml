<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#2A3350"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="#3D4A6E"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Skill Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/skill_icon_container"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#3D4A6E"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/skill_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/skill_icon"
                tools:src="@drawable/ic_power" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Skill Name -->
        <TextView
            android:id="@+id/skill_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sample_skill_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/skill_icon_container"
            app:layout_constraintStart_toEndOf="@id/skill_icon_container"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Skill Level -->
        <TextView
            android:id="@+id/skill_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_skill_level"
            android:textSize="12sp"
            android:textColor="#4FC3F7"
            android:textStyle="bold"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/bg_skill_level_tag"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/skill_name"
            app:layout_constraintStart_toEndOf="@id/skill_icon_container"
            android:layout_marginTop="4dp" />

        <!-- Skill Description -->
        <TextView
            android:id="@+id/skill_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sample_skill_description"
            android:textSize="11sp"
            android:textColor="#B0B8C8"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/skill_icon_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Unlock/Upgrade Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upgrade_skill"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/unlock_skill"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_upgrade"
            app:iconTint="#FFD700"
            app:iconGravity="start"
            app:iconSize="20dp"
            app:backgroundTint="#4A5F8E"
            app:cornerRadius="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/skill_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cost Display -->
        <LinearLayout
            android:id="@+id/cost_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_upgrade_skill"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/cost_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_coin"
                android:contentDescription="@string/cost_icon" />

            <TextView
                android:id="@+id/cost_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_cost"
                android:textSize="12sp"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:layout_marginStart="6dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
