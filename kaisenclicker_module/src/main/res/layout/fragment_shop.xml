<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0E14">

    <!-- Header con gradiente -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_inventory_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/btn_circle_dark"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back"
        android:scaleType="centerInside"
        app:tint="#FFD700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/shop_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="POWER UPGRADES"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Energy Display Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gold_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1A2633"
        app:strokeColor="#9C27B0"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/shop_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/energy_coin"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/current_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡ 0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#9C27B0" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Upgrades ScrollView Container -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/gold_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <!-- TAP DAMAGE UPGRADE -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/upgrade_tap_damage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#1A2633"
                    app:strokeColor="#8B6914"
                    app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/upgrade_container_jjk">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#DC143C">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/clicks"
                                android:scaleType="centerCrop" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REFORZAMIENTO EM"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:id="@+id/upgrade_level_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 1"
                                android:textSize="14sp"
                                android:textColor="#B0B0B0"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+15 damage per level (progressive)"
                                android:textSize="12sp"
                                android:textColor="#808080"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2D3E50"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Bottom Row: Cost + Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/energy_coin"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/upgrade_cost_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="100"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#9C27B0"
                            android:layout_marginStart="8dp" />

                        <ImageButton
                            android:id="@+id/btn_buy_upgrade_1"
                            android:layout_width="160dp"
                            android:layout_height="48dp"
                            android:background="@drawable/buy_button"
                            android:scaleType="fitXY"
                            android:contentDescription="Upgrade button" />

                    </LinearLayout>

                </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- AUTO CLICKER UPGRADE -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/upgrade_auto_clicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#1A2633"
                    app:strokeColor="#8B6914"
                    app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/upgrade_container_jjk">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#00CED1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/autoclicker"
                                android:scaleType="centerCrop" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AUTO CLICKER"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:id="@+id/upgrade_level_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 1"
                                android:textSize="14sp"
                                android:textColor="#B0B0B0"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+1 click per second"
                                android:textSize="12sp"
                                android:textColor="#808080"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2D3E50"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/energy_coin"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/upgrade_cost_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="500"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#9C27B0"
                            android:layout_marginStart="8dp" />

                        <ImageButton
                            android:id="@+id/btn_buy_upgrade_2"
                            android:layout_width="160dp"
                            android:layout_height="48dp"
                            android:background="@drawable/buy_button"
                            android:scaleType="fitXY"
                            android:contentDescription="Upgrade button" />

                    </LinearLayout>

                </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- BLACK FLASH UPGRADE -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/upgrade_critical_damage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#1A2633"
                    app:strokeColor="#8B6914"
                    app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/upgrade_container_jjk">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#8B00FF">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/blackflash"
                                android:scaleType="centerCrop" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BLACK FLASH"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:id="@+id/upgrade_level_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 1"
                                android:textSize="14sp"
                                android:textColor="#B0B0B0"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+10% total damage"
                                android:textSize="12sp"
                                android:textColor="#808080"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2D3E50"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/energy_coin"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/upgrade_cost_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="300"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#9C27B0"
                            android:layout_marginStart="8dp" />

                        <ImageButton
                            android:id="@+id/btn_buy_upgrade_3"
                            android:layout_width="160dp"
                            android:layout_height="48dp"
                            android:background="@drawable/buy_button"
                            android:scaleType="fitXY"
                            android:contentDescription="Upgrade button" />

                    </LinearLayout>

                </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- ENERGY BOOST UPGRADE -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/upgrade_gold_boost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#1A2633"
                    app:strokeColor="#8B6914"
                    app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/upgrade_container_jjk">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/energy_boost"
                                android:contentDescription="@string/chest_icon" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ENERGY BOOST"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:id="@+id/upgrade_level_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 1"
                                android:textSize="14sp"
                                android:textColor="#B0B0B0"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+10% energy earned"
                                android:textSize="12sp"
                                android:textColor="#808080"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2D3E50"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/energy_coin"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/upgrade_cost_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="200"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#9C27B0"
                            android:layout_marginStart="8dp" />

                        <ImageButton
                            android:id="@+id/btn_buy_upgrade_4"
                            android:layout_width="160dp"
                            android:layout_height="48dp"
                            android:background="@drawable/buy_button"
                            android:scaleType="fitXY"
                            android:contentDescription="Upgrade button" />

                    </LinearLayout>

                </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
