<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">

    <!-- Reset icon top-right (small, non-intrusive) -->
    <ImageButton
        android:id="@+id/btn_reset_stats"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="12dp"
        android:scaleType="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#FFD700"
        android:src="@drawable/ic_trash"
        android:contentDescription="@string/reset_stats_desc"
        app:layout_anchorGravity="top|end"
        android:layout_gravity="end|top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Damage Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_damage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:strokeWidth="1dp"
                app:strokeColor="#2A2A2A"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#212121">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DaÃ±o total"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_total_damage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textColor="#FFD700"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical|start"
                        android:typeface="monospace" />

                    <!-- DPS small -->
                    <TextView
                        android:id="@+id/tv_dps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="DPS: 0.00"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <!-- small summary for total clicks (label) -->
                    <TextView
                        android:id="@+id/tv_total_clicks_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Clicks: 0"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Grid central: Enemies y Bosses -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_enemies"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="28dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#2A2A2A"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#212121">

                    <!-- Reemplazo: tarjeta simplificada para Enemigos eliminados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_skull"
                            app:tint="#FFD700"
                            android:contentDescription="@string/label_enemies" />

                        <TextView
                            android:id="@+id/tv_enemies_count_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enemigos eliminados"
                            android:textColor="#D4AF37"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tv_enemies_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFD700"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bosses"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="28dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#2A2A2A"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#212121">

                    <!-- Reemplazo: tarjeta simplificada para Jefes eliminados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_hero"
                            app:tint="#FFD700"
                            android:contentDescription="@string/label_bosses" />

                        <TextView
                            android:id="@+id/tv_bosses_count_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jefes eliminados"
                            android:textColor="#D4AF37"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tv_bosses_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFD700"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Lower row: Clicks and Unlocked with progress -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_clicks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:strokeWidth="1dp"
                app:strokeColor="#2A2A2A"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#212121">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_click"
                        app:tint="#FFD700"
                        android:contentDescription="@string/label_clicks" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tv_clicks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFD700"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:typeface="monospace" />

                        <TextView
                            android:id="@+id/tv_total_clicks_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clicks totales"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_unlocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:strokeWidth="1dp"
                app:strokeColor="#2A2A2A"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#212121">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_timer"
                            app:tint="#FFD700"
                            android:contentDescription="@string/label_characters" />

                        <TextView
                            android:id="@+id/tv_unlocked_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/10"
                            android:textColor="#FFD700"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:typeface="monospace"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personajes desbloqueados"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_unlocked"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="12dp"
                        android:progress="0"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_drawable" />

                    <TextView
                        android:id="@+id/tv_unlocked_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0%"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Spacer bottom so reset icon doesn't overlap content when scrolling -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
