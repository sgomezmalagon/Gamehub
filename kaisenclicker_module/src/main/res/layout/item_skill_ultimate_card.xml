<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#3A2850"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    app:strokeColor="#FF6B9D"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ultimate Badge -->
        <TextView
            android:id="@+id/ultimate_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ultimate"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/bg_ultimate_badge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Skill Icon (Larger for Ultimate) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/skill_icon_container"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#5A3A6E"
            app:strokeColor="#FF6B9D"
            app:strokeWidth="3dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ultimate_badge"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/skill_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/ultimate_skill_icon"
                tools:src="@drawable/ic_power" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Skill Name -->
        <TextView
            android:id="@+id/skill_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sample_ultimate_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginStart="14dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/skill_icon_container"
            app:layout_constraintStart_toEndOf="@id/skill_icon_container"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Skill Level -->
        <TextView
            android:id="@+id/skill_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_skill_level"
            android:textSize="11sp"
            android:textColor="#FF6B9D"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/bg_ultimate_level_tag"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toBottomOf="@id/skill_name"
            app:layout_constraintStart_toEndOf="@id/skill_icon_container"
            android:layout_marginTop="5dp" />

        <!-- Charge Progress Bar -->
        <ProgressBar
            android:id="@+id/ultimate_charge_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:progress="75"
            android:progressDrawable="@drawable/progress_ultimate_charge"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/skill_level"
            app:layout_constraintStart_toEndOf="@id/skill_icon_container"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/charge_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_charge_percentage"
            android:textSize="10sp"
            android:textColor="#FF6B9D"
            android:textStyle="bold"
            android:layout_marginStart="14dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/ultimate_charge_progress"
            app:layout_constraintStart_toEndOf="@id/skill_icon_container" />

        <!-- Skill Description -->
        <TextView
            android:id="@+id/skill_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sample_ultimate_description"
            android:textSize="12sp"
            android:textColor="#E0E0E0"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="12dp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/skill_icon_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Upgrade Button (Epic Style) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upgrade_ultimate"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="@string/upgrade_ultimate"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_star"
            app:iconTint="#FFD700"
            app:iconGravity="start"
            app:iconSize="22dp"
            app:backgroundTint="#6A4A8E"
            app:cornerRadius="14dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/skill_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cost Display (Premium) -->
        <LinearLayout
            android:id="@+id/cost_container_ultimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_upgrade_ultimate"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/cost_icon_1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_gem"
                android:contentDescription="@string/gem_cost_icon" />

            <TextView
                android:id="@+id/cost_amount_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_gem_cost"
                android:textSize="13sp"
                android:textColor="#FF6B9D"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/cost_icon_2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_fragment"
                android:contentDescription="@string/fragment_cost_icon" />

            <TextView
                android:id="@+id/cost_amount_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_fragment_cost"
                android:textSize="13sp"
                android:textColor="#9C27B0"
                android:textStyle="bold"
                android:layout_marginStart="6dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
