<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra exterior suave -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#050505" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Marco metálico ornamental exterior (plata envejecida) -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#5A6A5F"
                android:centerColor="#4A5A4F"
                android:endColor="#3A4A3F" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Borde grabado metálico interior -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#3A4A42"
                android:centerColor="#2F3F37"
                android:endColor="#252D29" />
            <corners android:radius="14dp" />
            <stroke
                android:width="1dp"
                android:color="#0A0A0A" />
        </shape>
    </item>

    <!-- Fondo principal: Piedra y metal pulido con textura suave - SIN MÁRGENES INTERNOS -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#3D4D45"
                android:centerColor="#353F39"
                android:endColor="#2B3530" />
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>

