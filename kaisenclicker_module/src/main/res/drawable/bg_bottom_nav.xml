<?xml version="1.0" encoding="utf-8"?>
<!-- Premium bottom navigation background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#0D0E14"
                android:endColor="#1A2633" />
        </shape>
    </item>

    <!-- Top glow/shine effect -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="#4FC3F750"
                android:width="2dp" />
        </shape>
    </item>

</layer-list>

