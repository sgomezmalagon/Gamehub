<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo en tonos gris piedra y verde oscuro -->
    <gradient
        android:type="linear"
        android:angle="90"
        android:startColor="#2D3D34"
        android:centerColor="#3A4A40"
        android:endColor="#2A3230" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Sombra suave -->
    <stroke
        android:width="2dp"
        android:color="#1A1A1A" />

    <!-- Padding interno para textura -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp" />

</shape>

