<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hub_background">

    <!-- Header con botón atrás -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/btnBackLeaderboard"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/hub_text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/menu_scores"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_gradient_header" />

    <!-- Tabs de selección de juego -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tabKaisenClicker"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tab_kaisen_clicker"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/bg_menu_option"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/tab2048"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tab_2048"
            android:textColor="@color/hub_text_hint"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/bg_menu_option"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <!-- Botón para ver historial completo de puntuaciones -->
    <TextView
        android:id="@+id/btnViewAllScores"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/view_all_scores"
        android:textColor="@color/hub_cyan"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/bg_menu_option" />

    <!-- ═══ Contenido Kaisen Clicker ═══ -->
    <ScrollView
        android:id="@+id/layoutKaisen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nivel del enemigo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_challenge"
                    app:tint="@color/hub_accent"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaisen_enemy_level"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvKaisenEnemyLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hub_accent"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Clicks totales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_gamehub_logo"
                    app:tint="@color/hub_cyan"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaisen_total_clicks"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvKaisenTotalClicks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hub_cyan"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Daño total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_star"
                    app:tint="#FFFF5252"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaisen_total_damage"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvKaisenTotalDamage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFF5252"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Enemigos derrotados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_trophy"
                    app:tint="@color/status_playing"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaisen_enemies_defeated"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvKaisenEnemiesDefeated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/status_playing"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bosses derrotados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_challenge"
                    app:tint="#FFFF9800"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaisen_bosses_defeated"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvKaisenBossesDefeated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFF9800"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Energía maldita -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_points"
                    app:tint="@color/hub_accent_light"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaisen_cursed_energy"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvKaisenCursedEnergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hub_accent_light"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Nivel del personaje -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/hub_text_secondary"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaisen_character_level"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvKaisenCharLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hub_text_secondary"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tiempo jugado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_scores"
                    app:tint="@color/hub_text_hint"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaisen_time_played"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvKaisenTimePlayed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ═══ Contenido 2048 ═══ -->
    <ScrollView
        android:id="@+id/layout2048"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Puntuación actual -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_points"
                    app:tint="@color/hub_accent"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_2048_current"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv2048Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hub_accent"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Mejor puntuación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_trophy"
                    app:tint="@color/status_playing"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_2048_best"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv2048BestScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/status_playing"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Movimientos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_gamehub_logo"
                    app:tint="@color/hub_cyan"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_2048_moves"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv2048Moves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hub_cyan"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tiempo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_challenge_card"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_scores"
                    app:tint="@color/hub_text_hint"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_2048_time"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv2048Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hub_text_hint"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
