<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hub_background"
    tools:context=".MainActivity">

    <!-- ═══ Header ═══ -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="12dp">

        <!-- Fila superior: Logo + Título + Logout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_gamehub_logo"
                app:tint="@color/hub_accent"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/hub_title"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/btnLogout"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@drawable/ic_logout"
                app:tint="@color/hub_text_secondary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/btn_logout" />
        </LinearLayout>

        <!-- Subtítulo (bienvenida usuario) -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/hub_subtitle"
            android:textColor="@color/hub_text_secondary"
            android:textSize="14sp" />

        <!-- Separador gradiente -->
        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_gradient_header" />

        <!-- Contador de juegos -->
        <TextView
            android:id="@+id/tvGameCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/hub_text_hint"
            android:textSize="13sp"
            tools:text="2 juego(s)" />

    </LinearLayout>

    <!-- ═══ Tarjeta de Perfil del Usuario ═══ -->
    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:background="@drawable/bg_challenge_card"
        android:padding="14dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <!-- Foto de perfil -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            app:tint="@color/hub_text_secondary"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:strokeColor="@color/hub_accent"
            app:strokeWidth="2dp"
            android:contentDescription="@null" />

        <!-- Info del usuario -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hub_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Sergio" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <View
                    android:id="@+id/viewStatusIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_icon_circle" />

                <TextView
                    android:id="@+id/tvStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/hub_text_hint"
                    android:textSize="12sp"
                    tools:text="En línea" />
            </LinearLayout>
        </LinearLayout>

        <!-- Puntos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvUserPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hub_accent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="1,234" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_points"
                android:textColor="@color/hub_text_hint"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ═══ Opciones del menú ═══ -->
    <LinearLayout
        android:id="@+id/menuOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:gravity="center">

        <!-- Juegos -->
        <LinearLayout
            android:id="@+id/btnMenuGames"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_menu_option"
            android:padding="12dp"
            android:layout_marginEnd="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_gamehub_logo"
                app:tint="@color/hub_accent"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/menu_games"
                android:textColor="@color/hub_text_primary"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Puntuaciones -->
        <LinearLayout
            android:id="@+id/btnMenuScores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_menu_option"
            android:padding="12dp"
            android:layout_marginHorizontal="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_trophy"
                app:tint="@color/hub_cyan"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/menu_scores"
                android:textColor="@color/hub_text_primary"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Desafíos -->
        <LinearLayout
            android:id="@+id/btnMenuChallenges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_menu_option"
            android:padding="12dp"
            android:layout_marginHorizontal="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_challenge"
                app:tint="@color/status_playing"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/menu_challenges"
                android:textColor="@color/hub_text_primary"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:id="@+id/btnMenuProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_menu_option"
            android:padding="12dp"
            android:layout_marginStart="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/hub_text_secondary"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/menu_profile"
                android:textColor="@color/hub_text_primary"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- ═══ RecyclerView (Grid de juegos) ═══ -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGames"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_game_card" />

    <!-- ═══ Estado vacío ═══ -->
    <LinearLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp">

        <ImageView
            android:id="@+id/ivEmptyIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_gamepad_empty"
            app:tint="@color/hub_text_hint"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/empty_title"
            android:textColor="@color/hub_text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/empty_subtitle"
            android:textColor="@color/hub_text_hint"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>

