<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hub_background">

    <!-- Header con botón atrás -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/btnBackDetail"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/hub_text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
                android:text="@string/score_detail_title"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_gradient_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Juego -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_game_label"
            android:textColor="@color/hub_text_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDetailGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/hub_cyan"
            android:layout_marginBottom="16dp" />

        <!-- Jugador -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_player_label"
            android:textColor="@color/hub_text_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDetailPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/hub_text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Puntuación -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_score_label"
            android:textColor="@color/hub_text_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDetailScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/hub_accent" />

        <!-- Fecha -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_date_label"
            android:textColor="@color/hub_text_hint"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/hub_text_secondary" />
    </LinearLayout>
</LinearLayout>
