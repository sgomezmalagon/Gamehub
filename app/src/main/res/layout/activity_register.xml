<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hub_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp"
        android:paddingTop="60dp"
        android:paddingBottom="32dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_gamehub_logo"
            app:tint="@color/hub_cyan"
            android:contentDescription="@string/app_name" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/register_title"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/register_subtitle"
            android:textColor="@color/hub_text_secondary"
            android:textSize="14sp" />

        <!-- Separador visual -->
        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_gradient_header" />

        <!-- Campo Usuario -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_edit_text_selector"
            android:hint="@string/hint_username"
            android:textColor="@color/white"
            android:textColorHint="@color/hub_text_hint"
            android:textSize="15sp"
            android:inputType="text"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:autofillHints="username" />

        <!-- Campo Contraseña -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edit_text_selector"
            android:hint="@string/hint_password"
            android:textColor="@color/white"
            android:textColorHint="@color/hub_text_hint"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:autofillHints="password" />

        <!-- Campo Confirmar Contraseña -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edit_text_selector"
            android:hint="@string/hint_confirm_password"
            android:textColor="@color/white"
            android:textColorHint="@color/hub_text_hint"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:autofillHints="password" />

        <!-- Mensaje de error -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#FFEF5350"
            android:textSize="13sp"
            android:gravity="center"
            android:visibility="gone" />

        <!-- Botón Registrarse -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_primary"
            android:text="@string/btn_register"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- Link a login -->
        <TextView
            android:id="@+id/tvGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/link_has_account"
            android:textColor="@color/hub_accent_light"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>

