<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hub_background">

    <!-- Header con botón atrás -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/btnBackScoresList"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/hub_text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/scores_list_title"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_gradient_header" />

    <!-- ═══ Bloque de búsqueda ═══ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp">

        <!-- Fila 1: Buscar por nombre -->
        <EditText
            android:id="@+id/etSearchName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="@string/search_name_hint"
            android:textColorHint="@color/hub_text_hint"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/bg_edit_text"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:maxLines="1"
            android:importantForAutofill="no" />

        <!-- Fila 2: Operador + valor de score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinnerOperator"
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_menu_option"
                android:popupBackground="@color/hub_surface" />

            <EditText
                android:id="@+id/etSearchScore"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="@string/search_score_hint"
                android:textColorHint="@color/hub_text_hint"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/bg_edit_text"
                android:paddingHorizontal="12dp"
                android:inputType="number"
                android:maxLines="1"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="@string/btn_search"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/bg_tab_active" />

            <TextView
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginStart="6dp"
                android:paddingHorizontal="12dp"
                android:gravity="center"
                android:text="@string/btn_clear"
                android:textColor="@color/hub_text_hint"
                android:textSize="13sp"
                android:background="@drawable/bg_menu_option" />
        </LinearLayout>

        <!-- Fila 3: Botones de ordenación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sort_label"
                android:textColor="@color/hub_text_hint"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnSortName"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sort_by_name"
                android:textColor="@color/hub_text_hint"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_menu_option"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/btnSortScore"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sort_by_score"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_tab_active"
                android:layout_marginHorizontal="4dp" />

            <TextView
                android:id="@+id/btnSortDate"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sort_by_date"
                android:textColor="@color/hub_text_hint"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_menu_option"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ═══ Lista de scores ═══ -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvScores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Estado vacío -->
    <TextView
        android:id="@+id/tvEmptyScores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/no_scores_found"
        android:textColor="@color/hub_text_hint"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>

