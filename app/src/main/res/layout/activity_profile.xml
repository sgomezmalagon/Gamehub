<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hub_background"
    android:fillViewport="true"
    tools:context="com.example.gamehub.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Header con botón atrás -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnBackProfile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/hub_text_primary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/profile_title"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Foto de perfil -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            app:tint="@color/hub_text_secondary"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:strokeColor="@color/hub_accent"
            app:strokeWidth="2dp"
            android:contentDescription="@null" />

        <!-- Botón cambiar foto -->
        <TextView
            android:id="@+id/btnChangePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/change_photo"
            android:textColor="@color/hub_accent"
            android:textSize="13sp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground" />

        <!-- Nombre de usuario -->
        <TextView
            android:id="@+id/tvProfileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Sergio" />

        <!-- Estado -->
        <LinearLayout
            android:id="@+id/layoutStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground">

            <View
                android:id="@+id/viewStatusDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_icon_circle" />

            <TextView
                android:id="@+id/tvProfileStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/hub_text_secondary"
                android:textSize="14sp"
                tools:text="En línea" />
        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_gradient_header" />

        <!-- Stats Cards -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/profile_stats"
            android:textColor="@color/hub_text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Puntos totales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_challenge_card"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_points"
                app:tint="@color/hub_accent"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_points"
                    android:textColor="@color/hub_text_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvProfilePoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hub_accent"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="12,345 pts" />
            </LinearLayout>
        </LinearLayout>

        <!-- Partidas jugadas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_challenge_card"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_gamehub_logo"
                app:tint="@color/hub_cyan"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/games_played"
                    android:textColor="@color/hub_text_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvProfileGamesPlayed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hub_cyan"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="42" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tiempo jugado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_challenge_card"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_scores"
                app:tint="@color/status_playing"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_played"
                    android:textColor="@color/hub_text_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvProfileTimePlayed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/status_playing"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="01:23:45" />
            </LinearLayout>
        </LinearLayout>

        <!-- Miembro desde -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_challenge_card"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_scores"
                app:tint="@color/hub_text_secondary"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/member_since"
                    android:textColor="@color/hub_text_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvProfileMemberSince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hub_text_secondary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Feb 2026" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

