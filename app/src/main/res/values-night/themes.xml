<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash screen theme (night) -->
    <style name="Theme.Gamehub.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/hub_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Gamehub</item>
    </style>

    <!-- Base application theme (night) â€” same as day, always dark -->
    <style name="Theme.Gamehub" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/hub_accent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/hub_cyan</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/hub_background</item>
        <item name="colorSurface">@color/hub_surface</item>
        <item name="android:statusBarColor">@color/hub_background</item>
        <item name="android:navigationBarColor">@color/hub_background</item>
    </style>

</resources>